abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$script" "$*"
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath || true)

    if [ -n "$realpath" ]; then
	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf '%s\n' "$file"
	    else
		printf '%s\n' "$PWD/${file#./}"
	    fi
	done
    fi
)

normalize_path() {
    tmpfile=$(mktemp)
    trap "/bin/rm -f \"$tmpfile\"" EXIT INT QUIT TERM

    printf "%s\n" "${1-$PATH}" | tr ':' '\n' | while read dir; do
	if [ -d "$dir" ]; then
	    dir=$(get_realpath "$dir")
	fi

	if ! grep -E '^'"$dir"'$' $tmpfile >/dev/null; then
	    printf '%s\n' "$dir" >>$tmpfile
	fi
    done

    tr '\n' ':' <$tmpfile | sed 's/:$//'
    printf '%s\n' ''
}

normalize_path "$@"

