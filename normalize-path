get_realpath() (
    for file; do
	if expr "$file" : '/.*' >/dev/null; then
	    printf "%s\n" "$file"
	else
	    printf "%s\n" "$PWD/${file#./}"
	fi
    done
)

join_dirs() {
    tr '\n' ':' | sed 's/:$/\n/'
}

normalize_dirs() {
    sort -u | sed 's/^\(.*\)$/"\1"/'
}

normalize_path() {
    if [ -x /bin/realpath ]; then
	realpath=/bin/realpath
    else
	realpath=get_realpath
    fi

    dirs=$(printf '%s\n' "${1-$PATH}" | split_path | normalize_dirs)
    eval $realpath $dirs 2>/dev/null | join_dirs
}

split_path() {
    tr ':' '\n'
}

normalize_path "$@"
