DEBIAN_PKGS="apt-transport-https ca-certificates curl gnupg2 \
software-properties-common"
DOCKER_BASE_URL=https://download.docker.com

abort() {
    printf "$@" >&2
    exit 1
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
    	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

install_docker_ce() {
    case "$kernel_name" in
	(Linux|GNU)
	    docker_url="$DOCKER_BASE_URL/linux/$ID"

	    case "$ID" in
		(debian|raspbian|ubuntu)
		    codename="$(lsb_release -cs)"
		    repository="deb [arch=amd64] $docker_url $codename stable"
		    apt-get remove -qqy docker docker.io || true
		    apt-get install "$@" $DEBIAN_PKGS
		    curl -fsSL $docker_url/gpg | apt-key add -
		    add-apt-repository "$repository"
		    apt-get update
		    apt-get install "$@" docker-ce

		    if [ -n "${SUDO_USER-}" ] && [ "$(id -u)" -eq 0 ]; then
			install_docker_group
		    fi
		    ;;
		(*)
		    abort_not_supported Distro
		    ;;
	    esac
	    ;;
	(*)
	    abort_not_supported "Operating system"
	    ;;
    esac
}

install_docker_group() {
    if ! getent group docker >/dev/null; then
	groupadd docker
    fi

    if [ "$invoke_usermod" = true ]; then
	members="$(getent group docker | awk -F: '{print $4}')"

	if ! printf "%s\n" "$members" | grep -q "\<$SUDO_USER\>"; then
	    usermod -a -G docker $SUDO_USER
	    printf "Please restart the machine before using docker\n"
	fi
    fi
}

script_dir=$(get_realpath "$(dirname "$0")")

eval $("$script_dir/get-os-release" -X)

install_docker_ce "$@"
