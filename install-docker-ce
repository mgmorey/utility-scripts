#!/bin/sh -eu

# install-docker-ce: install Docker CE OS-level virtualization system
# Copyright (C) 2019  "Michael G. Morey" <mgmorey@gmail.com>

# This program is free software: you can redistribute it and/or modify
# it under the terms of the GNU General Public License as published by
# the Free Software Foundation, either version 3 of the License, or
# (at your option) any later version.

# This program is distributed in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
# GNU General Public License for more details.

# You should have received a copy of the GNU General Public License
# along with this program.  If not, see <https://www.gnu.org/licenses/>.

DOCKER_BASE_URL=https://download.docker.com
ORACLE_LINUX_REPOS="ol7_addons ol7_optional_latest"

abort() {
    printf "$@" >&2
    exit 1
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$script" "$PRETTY_NAME" "$*"
}

add_gpg_key() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]

    for id in $ID $ID_LIKE; do
	case "$id" in
	    (debian)
		curl -fsSL $1/gpg | apt-key add - >/dev/null 2>&1
		break
		;;
	esac
    done
}

add_repositories() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    repo="$(get_docker_repo $1)"

    for id in $ID $ID_LIKE; do
	case "$id" in
	    (debian)
		add-apt-repository "$repo"
		break
		;;
	    (rhel|ol|centos|fedora)
		repo_id=docker-ce-stable/$(uname -m)
		data=$($manager repolist | get_repository_data $repo_id)

		if [ -z "$data" ]; then
		    yum-config-manager --add-repo "$repo" >/dev/null
		fi

		break
		;;
	esac
    done
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$script" "$*"
}

configure_daemon_group() {
    assert [ $# -ge 1 ]

    if [ -z "${SUDO_USER-}" ] || [ "$(id -u)" -gt 0 ]; then
	return 0
    fi

    group=$(get-docker-group "$@")

    if [ -n "$group" ]; then
	install_group $group
	modify_user $group
    fi
}

configure_platform() {
    manager=$(get_package_manager_basename)
}

enable_additional_repositories() {
    case "$ID" in
	(ol)
	    case "$VERSION_ID" in
		(7.*)
		    for repo in $ORACLE_LINUX_REPOS; do
			yum-config-manager --enable $repo >/dev/null
		    done
		    ;;
	    esac
	    ;;
    esac
}

get_architecture() {
    machine=$(uname -m)

    case "$machine" in
	(i86pc|x86_64)
	    printf "%s\n" amd64
	    ;;
	(armv7l)
	    printf "%s\n" armhf
	    ;;
	(*)
	    printf "%s\n" $machine
	    ;;
    esac
}

get_codename() {
    lsb_release -cs
}

get_difference() (
    assert [ $# -eq 2 ]

    for item in $1; do
	if ! printf "%s\n" $2 | grep -q '^'"$item"'$'; then
	    printf "%s\n" "$item"
	fi
    done
)

get_docker_origin() {
    origin=

    for package; do
	case $package in
	    (docker-ce|docker-ce-cli)
		origin=docker.com
		;;
	    (docker|docker.io)
		origin=native
		;;
	    (podman|podman-docker)
		origin=podman
		;;
	esac

	if [ -n "${origin-}" ]; then
	    printf "%s\n" "$origin"
	    break
	fi
    done
}

get_docker_repo() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    arch=$(get_architecture)
    repo=

    for id in $ID $ID_LIKE; do
	case "$id" in
	    (debian)
		repo="deb [arch=$arch] $1 $(get_codename) stable"
		;;
	    (centos|fedora)
		repo="$(get_docker_url $id)/docker-ce.repo"
		;;
	    (rhel|ol)
		repo="$(get_docker_url centos)/docker-ce.repo"
		;;
	esac

	if [ -n "${repo-}" ]; then
	    printf "%s\n" "$repo"
	    break
	fi
    done
}

get_docker_url() {
    printf "%s\n" "$DOCKER_BASE_URL/linux/$1"
}

get_package_manager_basename() {
    manager_pathname=$(get-package-managers | awk 'NR == 1 {print $0}')
    manager_basename=$(basename $manager_pathname)
    printf "%s\n" $manager_basename
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath || true)

    if [ -n "$realpath" ]; then
	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

get_repository_data() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    awk -v repo_id=$1 'NR > 1 && $1 == repo_id {print $0}'
}

install_dependencies() {
    dependencies=$(get-packages -s dependencies docker-ce)

    if [ -n "$dependencies" ]; then
	install-packages $dependencies
    fi
}

install_docker_ce() {
    validate_platform
    configure_platform
    preinstall_docker
    installed_packages=$(get-installed-docker-packages)
    origin=$(get_docker_origin $installed_packages)

    if [ -n "$origin" ]; then
	case "$origin" in
	    (docker.com)
		printf "Docker Community Edition is installed.\n"
		;;
	    (native)
		printf "Native Docker is installed.\n"
		;;
	    (podman)
		printf "Podman is installed.\n"
		;;
	esac
    else
	printf "Docker is not installed.\n"
    fi

    selected_packages=$(get-packages docker-ce)
    packages=$(get_difference "$installed_packages" "$selected_packages")

    if [ -n "$packages" ]; then
	if ! uninstall-packages $packages; then
	    return $?
	fi
    fi

    if [ -n "$selected_packages" ]; then
	configure_daemon_group $selected_packages

	if install-packages $selected_packages; then
	    postinstall_docker
	    restart_docker
	else
	    return $?
	fi
    fi
}

install_group() {
    assert [ $# -eq 1 ]

    if ! getent group $1 >/dev/null; then
	groupadd $1
    fi
}

modify_user() (
    assert [ $# -eq 1 ]

    if ! getent group $1 >/dev/null; then
	return 0
    fi

    members="$(getent group $1 | awk -F: '{print $4}')"

    if ! printf "%s\n" "$members" | grep -q "\<$SUDO_USER\>"; then
	usermod -aG $1 $SUDO_USER
    fi
)

postinstall_docker() {
    mkdir -p /etc/docker /etc/systemd/system/docker.service.d
    cat <<EOF >/etc/docker/daemon.json
{
  "exec-opts": ["native.cgroupdriver=systemd"],
  "log-driver": "json-file",
  "log-opts": {
    "max-size": "100m"
  },
  "storage-driver": "overlay2",
  "storage-opts": [
    "overlay2.override_kernel_check=true"
  ]
}
EOF
    postinstall_platform
}

postinstall_platform() {
    case "$ID" in
	(rhel|ol|centos)
	    systemctl stop firewalld
	    systemctl disable firewalld
	    ;;
    esac

    case "$ID" in
	(ol)
	    semanage permissive -a container_runtime_t
	    ;;
    esac
}

preinstall_docker() {
    docker_url=$(get_docker_url $ID)
    install_dependencies
    add_gpg_key "$docker_url"
    add_repositories "$docker_url"
    enable_additional_repositories
}

remove_native_docker_packages() {
    if ! uninstall-packages "$@"; then
	exit $?
    fi
}

restart_docker() {
    systemctl daemon-reload
    systemctl restart docker
}

usage_error() {
    printf "$@" >&2
    exit 2
}

validate_platform() {
    arch=$(get_architecture)

    case "$arch" in
	(amd64)
	    true
	    ;;
	(*)
	    abort "%s: %s: Architecture not supported" "$script" "$arch"
	    ;;
    esac

    # Refer to https://docs.docker.com/install/#supported-platforms

    case "$ID" in
	(centos)
	    case "$VERSION_ID" in
		(7)
		    true
		    ;;
		(8)
		    true
		    ;;
		(*)
		    abort_not_supported Release
		    ;;
	    esac
	    ;;
	(debian|raspbian)
	    true
	    ;;
	(fedora)
	    true
	    ;;
	(rhel|ol)
	    case "$VERSION_ID" in
		(7.*)
		    true
		    ;;
		(8.*)
		    true
		    ;;
		(*)
		    abort_not_supported Release
		    ;;
	    esac
	    ;;
	(ubuntu)
	    if [ "${VERSION_ID%.*}" -le 18 ]; then
		abort_not_supported Release
	    fi
	    ;;
	(*)
	    abort_not_supported "Operating system"
	    ;;
    esac
}

if [ $# -gt 0 ]; then
    usage_error "%s: Too many arguments\n" "$script"
fi

script=$(basename "$0")

case "$0" in
    (*/*)
	script_dir=$(cd "$(dirname "$0")" && pwd)
	;;
    (*)
	script_dir=
	;;
esac

script_prefix=${script_dir:+$script_dir/}

. "${script_prefix}common-functions.sh"

set_user_profile "$script_dir"
eval $(get-os-release -x)
install_docker_ce "$@"
