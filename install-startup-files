# along with this program.  If not, see <https://www.gnu.org/licenses/>.

STARTUP_FILES=https://mgmorey@github.com/mgmorey/startup-files.git

abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
    	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

script_dir=$(get_realpath "$(dirname "$0")")

if [ ! -h $0 ]; then
    abort "Please change from source directory before running this script\n"
fi

dir=$PWD
cd $HOME

"$script_dir/install-git"

if [ ! -d Documents/git ]; then
    mkdir -p Documents

    if [ -d git ]; then
	/bin/mv git Documents/git
    else
	mkdir Documents/git
    fi
fi

if [ ! -e git ]; then
    /bin/ln -s Documents/git git
fi

cd git

if [ ! -d startup-files ]; then
    git clone $STARTUP_FILES
fi

cd ..

if [ ! -e .profile ]; then
    printf "Installing %s\n" .profile
    /bin/cp $HOME/git/startup-files/.profile .
fi

if [ -d .emacs.d ]; then
    cd .emacs.d

    if [ ! -e init.el ]; then
	printf "Installing %s\n" .emacs.d/init.el
	/bin/cp $HOME/git/startup-files/.emacs.d/init.el .
    fi
fi

printf "Please log out and back in again to activate the new environment\n"
