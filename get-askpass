# along with this program.  If not, see <https://www.gnu.org/licenses/>.

function abort() {
    echo $1 >&2
    exit 1
}

desktop_name=$(get-de-name | to-lower)
distro_name=$(get-distro-name)
platform_name=$(get-platform-name)

case "$platform_name" in
    (Linux)
	case "$distro_name" in
	    (Debian)
		case "$desktop_name" in
		    (gnome*)
			package_name=ssh-askpass-gnome
			;;
		    (kde*|plasma*)
			package_name=kaskpass
			;;
		    (*)
			abort "$desktop_name: desktop not supported"
			;;
		    esac
		;;
	    (openSUSE)
		case "$desktop_name" in
		    (gnome*)
			package_name=openssh-askpass-gnome
			;;
		    (kde*|plasma*)
			package_name=ksshaskpass5
			;;
		    (*)
			abort "$desktop_name: desktop not supported"
			;;
		    esac
		;;
	    (*)
		abort "$distro_name: distro not supported"
		;;
	esac
	;;
    (Linux)
	case "$distro_name" in
	    (Debian)
		case "$desktop_name" in
		    (gnome*)
			package_name=ssh-askpass-gnome
			;;
		    (kde*|plasma*)
			package_name=kaskpass
			;;
		    (*)
			abort "$desktop_name: desktop not supported"
			;;
		    esac
		;;
	    (openSUSE)
		case "$(get-de-name)" in
		    (gnome*)
			package_name=openssh-askpass-gnome
			;;
		    (kde*|plasma*)
			package_name=ksshaskpass5
			;;
		    (*)
			abort "$desktop_name: desktop not supported"
			;;
		    esac
		;;
	    (*)
		abort "$distro_name: distro not supported"
		;;
	esac
	;;
    (SunOS)
	case "$distro_name" in
	    (illumos)
		case "$desktop_name" in
		    (mate)
			package_name=ssh-askpass
			;;
		    (*)
			abort "$desktop_name: desktop not supported"
			;;
		    esac
		;;
	    (*)
		abort "$distro_name: distro not supported"
		;;
	esac
	;;
    (*)
	abort "$platform_name: platform not supported"
	;;
esac

get-package-filenames "$package_name" | grep 'askpass$'
