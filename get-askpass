AWK_RE='\/.+\/(bin|lib|libexec)\/.+(askpass|askpass2)$'

abort() {
    printf "$@" >&2
    exit 1
}

abort_desktop_not_supported() {
    abort "%s: %s: Desktop not supported\n" "$0" "$desktop_name"
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

configure_platform() {
    desktop_name=$("$script_dir/get-desktop-name")

    for id in $ID $ID_LIKE; do
	case "$id" in
	    (ms-windows)
		case "$desktop_name" in
		    (MATE|X-Cygwin|'')
			helper=/usr/libexec/gnome-ssh-askpass
			;;
		esac
		;;
	    (debian)
		case "$desktop_name" in
		    (GNOME|GNOME*|*:GNOME|LXDE|X-Cinnamon|'')
			package=ssh-askpass-gnome
			;;
		    (KDE*)
			package=ksshaskpass
			;;
		esac
		;;
	    (opensuse)
		case "$desktop_name" in
		    (GNOME|GNOME*|*:GNOME|'')
			package=openssh-askpass-gnome
			;;
		    (KDE*)
			package=ksshaskpass5
			;;
		esac
		;;
	    (fedora|rhel)
		case "$desktop_name" in
		    (GNOME|GNOME*|*:GNOME|'')
			package=openssh-askpass
			;;
		    (KDE*)
			package=ksshaskpass
			;;
		esac
		;;
	    (macos)
		break
		;;
	    (freebsd)
		case "$desktop_name" in
		    (GNOME|GNOME*|MATE|'')
			package=gnome-ssh-askpass
			;;
		    (KDE*)
			package=ksshaskpass
			;;
		esac
		;;
	    (netbsd)
		helper=/usr/X11R7/bin/ssh-askpass
		;;
	    (openindiana)
		case "$desktop_name" in
		    (MATE|'')
			helper=/usr/lib/ssh/ssh-askpass
			;;
		esac
		;;
	esac

	if [ -n "${package-${helper-}}" ]; then
	    break
	fi
    done
}

get_askpass() {
    configure_platform

    if [ -z "${helper:-}" -a -n "${package-}" ]; then
	helper=$(get_filenames $package 2>/dev/null | get_helper)
    fi

    if [ -n "${helper-}" ]; then
	if [ -n "${package:-}" ]; then
	    printf "# %s package %s:\n" "$PRETTY_NAME" $package
	fi

	printf "%s\n" "${helper%.exe}"
    fi
}

get_filenames() {
    "$script_dir/get-package-filenames" $1
}

get_helper() {
    awk '$1 ~ /'"$AWK_RE"'/ {print $0; exit 0}'
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
    	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

script_dir=$(get_realpath "$(dirname "$0")")

eval $("$script_dir/get-os-release" -x)

get_askpass
