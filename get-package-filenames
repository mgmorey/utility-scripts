abort() {
    printf "$@" >&2
    exit 1
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_package_filenames() {
    for id in $ID $ID_LIKE; do
	case "$id" in
	    (debian)
		dpkg --listfiles "$1"
		return
		;;
	    (rhel|fedora|opensuse)
		rpm --query --list "$1"
		return
		;;
	    (freebsd)
		pkg query %Fp "$1"
		return
		;;
	    (solaris)
		pkg contents $1 | awk 'NR > 1 {printf("/%s\n", $0)}'
		return
		;;
	esac
    done

    abort_not_supported "Operating system"
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

if [ $# -eq 0 ]; then
    abort "%s: Not enough arguments\n" "$0"
fi

if [ $# -gt 1 ]; then
    abort "%s: Too many arguments\n" "$0"
fi

eval $(get-os-release -x)

get_package_filenames "$@"
