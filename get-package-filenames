# along with this program.  If not, see <https://www.gnu.org/licenses/>.

abort() {
    printf "$@" >&2
    exit 1
}

if [ $# -eq 0 ]; then
    abort "Not enough arguments\n"
fi

awk_expr='{ printf("/%s\n", $0) }'
distro_name=$(get-distro-name)
platform_name=$(get-platform-name)

case "$platform_name" in
    (Linux)
	case "$distro_name" in
	    (debian|ubuntu)
		dpkg --listfiles "$1"
		;;
	    (centos|fedora|opensuse-*)
		rpm --query --list "$1"
		;;
	    (*)
		abort "%s: Distro not supported\n" "$distro_name"
		;;
	esac
	;;
    (FreeBSD)
	pkg query %Fp "$1"
	;;
    (SunOS)
	case "$distro_name" in
	    (illumos)
		pkg search -H -o search.match "basename:$1" | awk "$awk_expr"
		;;
	    (*)
		abort "%s: Distro not supported\n" "$distro_name"
		;;
	esac
	;;
    (*)
	abort "%s: Platform not supported\n" "$platform_name"
	;;
esac
