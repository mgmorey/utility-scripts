abort() {
    printf "$@" >&2
    exit 1
}

abort_too_many_arguments() {
    usage "%s: too many arguments -- %s\n" "$0" "$*"
    exit 2
}

parse_arguments() {
    is_query=false

    while getopts hq opt; do
	case $opt in
	    (h)
		usage
		exit 0
		;;
	    (q)
		is_query=true
		;;
	    (\?)
		printf "%s\n" "" >&2
		usage
		exit 2
		;;
	esac
    done

    shift $(($OPTIND - 1))

    if [ is_query = true -a $# -gt 0 ]; then
	abort_too_many_arguments "$@"
    else
	commands="$*"
    fi
}

usage() {
    if [ $# -gt 0 ]; then
	printf "$@" >&2
	printf "%s\n" "" >&2
    fi

    cat >&2 <<-EOM
	Usage: $0 [COMMAND [COMMAND] ...]
	       $0 -h
	       $0 -q
	EOM
}

parse_arguments "$@"

if [ $is_query = true ]; then
    get-askpass
else
    set-askpass ${commands-}
fi
