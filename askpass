abort() {
    printf "$@" >&2
    exit 1
}

query_flag=0

while getopts q opt
do
     case $opt in
	 (q)
	     query_flag=1
	     ;;
	 (?)
	     printf "Usage: %s: [-q] [args]\n" $(basename "$0")
	     exit 2
	     ;;
     esac
done

if [ $query_flag -eq 1 ]; then
    get-askpass
else
    set-askpass "$@"
fi
