# (at your option) any later version.

# This program is distributed in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
# GNU General Public License for more details.

# You should have received a copy of the GNU General Public License
# along with this program.  If not, see <https://www.gnu.org/licenses/>.

DEBIAN_PKGS="libpq-dev %s-psycopg2"

FEDORA_PKGS="libpq-devel %s-psycopg2"

FREEBSD_PKGS="%s-psycopg2"

ILLUMOS_PKGS="database/postgres-11/developer"

MACOS_HOMEBREW_PKGS="libpq"

OPENSUSE_PKGS=

REDHAT_8_PKGS="libpq-devel %s-psycopg2"

SOLARIS_PKGS="database/postgres"

abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

get_python_postgres_packages() {
    for id in $ID $ID_LIKE; do
	case "$id" in
	    (centos)
		case "$VERSION_ID" in
		    (7)
			break
			;;
		    (8)
			packages=$REDHAT_8_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (debian)
		case "$VERSION_ID" in
		    (10)
			packages=$DEBIAN_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (fedora)
		case "$VERSION_ID" in
		    (31)
			packages=$FEDORA_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (opensuse-leap)
		case "$VERSION_ID" in
		    (15.1)
			packages=$OPENSUSE_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (opensuse-tumbleweed)
		case "$VERSION_ID" in
		    (2020????)
			packages=$OPENSUSE_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (rhel|ol)
		case "$VERSION_ID" in
		    (7.*)
			break
			;;
		    (8.*)
			packages=$REDHAT_8_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (freebsd)
		case "$VERSION_ID" in
		    (11.3-*)
			packages=$FREEBSD_PKGS
			;;
		    (12.1-*)
			packages=$FREEBSD_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (illumos)
		case "$VERSION_ID" in
		    (2019.10)
			packages=$ILLUMOS_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (macos)
		case "$VERSION_ID" in
		    (10.14.*)
			packages=$MACOS_HOMEBREW_PKGS
			;;
		    (10.15.*)
			packages=$MACOS_HOMEBREW_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	    (solaris)
		case "$VERSION_ID" in
		    (11.4)
			packages=$SOLARIS_PKGS
			;;
		    (*)
			break
			;;
		esac
		;;
	esac

	if [ -n "${packages-}" ]; then
	    break
	fi
    done

    get-python-packages ${packages-}
}

script_dir=$(get_realpath "$(dirname "$0")")

. "$script_dir/common-functions.sh"

set_user_profile "$script_dir"
eval $(get-os-release -x)
get_python_postgres_packages
