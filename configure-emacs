BASE_URL=https://mirrors.ocf.berkeley.edu/gnu
VERSION=26.1

abort() {
    printf "$@" >&2
    exit 1
}

basename=emacs-$VERSION

archive_dir="$HOME/Downloads/GNU"
build_dir="$HOME/Documents/build/$basename"
src_dir="$HOME/Documents/src/GNU/$basename"

filename=$basename.tar.xz

pathname=$archive_dir/$filename
url=$BASE_URL/emacs/$filename

distro_name=$(get-os-release -i)
kernel_name=$(get-os-kernel-name)

case "$kernel_name" in
    (Linux)
	case "$distro_name" in
	    (debian|ubuntu|fedora|redhat|centos|opensuse-*)
	    	;;
	    (*)
		abort "%s: Distro not supported\n" "$distro_name"
		;;
	esac
	;;
    (FreeBSD|SunOS|NT)
	;;
    (*)
	abort "%s: Operating system not supported\n" "$kernel_name"
	;;
esac

install-emacs-build-deps
install-emacs-build-extras

mkdir -p "$build_dir" "$(dirname "$src_dir")" "$archive_dir"

if [ ! -r "$pathname" ]; then
    cd "$archive_dir"
    wget $url
fi

if [ ! -r "$src_dir/configure" ]; then
    cd $(dirname "$src_dir")
    tar -xvf "$pathname"
fi

if [ ! -r "$build_dir/config.status" ]; then
    cd "$build_dir"
    "$src_dir/configure" "$@"
fi
