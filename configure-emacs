BASE_URL=https://mirrors.ocf.berkeley.edu/gnu
EMACS_VERSION=26.1

EMACS_BASENAME=emacs-$EMACS_VERSION

ARCHIVE_DIR="$HOME/Downloads/GNU"
BUILD_DIR="$HOME/Documents/build/$EMACS_BASENAME"
SRC_DIR="$HOME/Documents/src/GNU/$EMACS_BASENAME"

EMACS_FILENAME=$EMACS_BASENAME.tar.xz

EMACS_PATHNAME=$ARCHIVE_DIR/$EMACS_FILENAME
EMACS_URL=$BASE_URL/emacs/$EMACS_FILENAME

abort() {
    printf "$@" >&2
    exit 1
}

kernel_name=$(get-os-kernel-name)

case "$kernel_name" in
    (Linux|FreeBSD|SunOS|NT)
	mkdir -p "$BUILD_DIR" "$(dirname "$SRC_DIR")" "$ARCHIVE_DIR"

	if [ ! -r "$EMACS_PATHNAME" ]; then
	    cd "$ARCHIVE_DIR"
	    wget $EMACS_URL
	fi

	if [ ! -r "$SRC_DIR/configure" ]; then
	    cd $(dirname "$SRC_DIR")
	    tar -xvf "$EMACS_PATHNAME"
	fi

	if [ ! -r "$BUILD_DIR/config.status" ]; then
	    cd "$BUILD_DIR"
	    "$SRC_DIR/configure" "$@"
	fi
	;;
    (*)
	abort "%s: Operating system not supported\n" "$kernel_name"
	;;
esac
