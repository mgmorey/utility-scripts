BASE_URL=https://mirrors.ocf.berkeley.edu/gnu
VERSION=26.2

abort() {
    printf "$@" >&2
    exit 1
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

realpath() {
    assert [ -d "$1" ]

    if [ -x /usr/bin/realpath ]; then
	/usr/bin/realpath "$1"
    else
	if expr "$1" : '/.*' >/dev/null; then
	    printf "%s\n" "$1"
	else
	    printf "%s\n" "$PWD/${1#./}"
	fi
    fi
}

basename=emacs-$VERSION

archive_dir="$HOME/Downloads/GNU"
build_dir="$HOME/Documents/build/$basename"
src_dir="$HOME/Documents/src/GNU/$basename"

filename=$basename.tar.xz

pathname=$archive_dir/$filename
url=$BASE_URL/emacs/$filename

script_dir=$(realpath "$(dirname "$0")")

eval $(sh -eu $script_dir/get-os-release -X)

case "$kernel_name" in
    (Linux)
	case "$ID" in
	    (debian|ubuntu|opensuse-*|fedora|redhat|centos)
		:
	    	;;
	    (*)
		abort_not_supported Distro
		;;
	esac
	;;
    (FreeBSD|SunOS|NT)
	:
	;;
    (*)
	abort_not_supported "Operating system"
	;;
esac

mkdir -p "$build_dir" "$(dirname "$src_dir")" "$archive_dir"

if [ ! -r "$pathname" ]; then
    cd "$archive_dir"
    wget $url
fi

if [ ! -r "$src_dir/configure" ]; then
    cd $(dirname "$src_dir")
    tar -xvf "$pathname"
fi

if [ ! -r "$build_dir/config.status" ]; then
    cd "$build_dir"
    "$src_dir/configure" "$@"
fi
