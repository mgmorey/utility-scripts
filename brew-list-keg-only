import json
import os
import subprocess
import sys

COMMAND = ['/bin/sh', '-c', 'brew info --installed --json']

s = subprocess.run(COMMAND, stdout=subprocess.PIPE).stdout.decode('utf-8')
print('\n'.join([p['name'] for p in json.loads(s) if p['keg_only']]))
