DARWIN_PKGS="gdbm libffi openssl readline zlib"

DEBIAN_PKGS="curl libbz2-dev libffi-dev libreadline-dev libsqlite3-dev \
libssl-dev %s-dev zlib1g-dev"

FEDORA_PKGS="bzip2-devel gcc libffi-devel make ncurses-devel openssl-devel \
%s-devel %s-pip readline-devel sqlite-devel"

FREEBSD_PKGS="bash gmake libffi ncurses"

OPENSUSE_PKGS="libbz2-devel libffi-devel libopenssl-devel %s-devel \
readline-devel sqlite3-devel"

REDHAT_PKGS="bzip2-devel gcc libffi-devel make ncurses-devel \
openssl-devel %s-devel readline-devel sqlite-devel"

SUNOS_PKGS="build-essential"

abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

realpath() {
    assert [ -d "$1" ]

    if [ -x /usr/bin/realpath ]; then
	/usr/bin/realpath "$1"
    else
	if expr "$1" : '/.*' >/dev/null; then
	    printf "%s\n" "$1"
	else
	    printf "%s\n" "$PWD/${1#./}"
	fi
    fi
}

script_dir=$(realpath "$(dirname "$0")")

distro_name=$(sh -eu $script_dir/get-os-release -i)
kernel_name=$(sh -eu $script_dir/get-os-release -k)

case "$kernel_name" in
    (Linux)
	case "$distro_name" in
	    (debian|ubuntu)
	    	packages=$DEBIAN_PKGS
	    	;;
	    (fedora)
	    	packages=$FEDORA_PKGS
	    	;;
	    (opensuse-*)
	    	packages=$OPENSUSE_PKGS
	    	;;
	    (redhat|centos)
		packages=$REDHAT_PKGS
		;;
	esac
	;;
    (Darwin)
	packages=$DARWIN_PKGS
	;;
    (FreeBSD)
	packages=$FREEBSD_PKGS
	;;
    (SunOS)
	packages=$SUNOS_PKGS
	;;
esac

data=$(sh -eu $script_dir/get-python-package)
package_name=$(printf "%s" "$data" | awk '{print $1}')
package_modifier=$(printf "%s" "$data" | awk '{print $2}')

for package in ${packages:-}; do
    case $package in
	(*%s*)
	    printf "$package\n" $package_modifier
	    ;;
	(*)
	    printf "%s\n" $package
	    ;;
    esac
done
