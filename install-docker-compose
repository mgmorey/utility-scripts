BASE_URL=https://github.com/docker/compose/releases
COMPOSE_VERSION=1.28.2

get_compose_version() {
    get_version_string "${1-docker-compose}" | cut -d, -f 1
}

get_target_file() {
    printf '%s/%s\n' "$prefix" bin/docker-compose
}

get_version_number() {
    printf '%s\n' "$*" | awk '{print $3}'
}

get_version_string() {
    file=$(env PATH="$prefix/bin:$PATH" which $1)

    if [ -n "$file" ]; then
	"$file" --version
    fi
}

get_compose_url() {
    filetype=$(get_filetype)
    hardware=$(get_hardware)
    platform=$(get_platform)
    file="docker-compose-$platform-$hardware${filetype:+.$filetype}"
    dir="download/$COMPOSE_VERSION"
    url="$BASE_URL/$dir/$file"
    printf '%s\n' "$url"
}

get_execmode() {
    case "$1" in
	($HOME/*)
	    printf '%s\n' a+rx
	    ;;
	(*)
	    printf '%s\n' u=rwx,go=rx
	    ;;
    esac
}

get_filetype() {
    system=$(uname -s)

    case "$system" in
	(CYGWIN_NT-*)
	    printf '%s\n' exe
	    ;;
	(MINGW64_NT-*)
	    printf '%s\n' exe
	    ;;
    esac
}

get_hardware() {
    uname -m
}

get_platform() {
    system=$(uname -s)

    case "$system" in
	(CYGWIN_NT-*)
	    printf '%s\n' Windows
	    ;;
	(MINGW64_NT-*)
	    printf '%s\n' Windows
	    ;;
	(*)
	    printf '%s\n' "$system"
	    ;;
    esac
}

install_binary_file() {
    dir=$(dirname "$1")
    file=$(basename "$1")
    mode=$(get_execmode "$1")

    if [ ! -d "$dir" ]; then
	mkdir ${mode:+-m $mode }-p "$dir"
    fi

    tmpfile=$(mktemp -p "$dir" -t "$file.XXXXXXXXXX.tmp")
    trap "/bin/rm -f \"$tmpfile\"" EXIT INT QUIT TERM
    curl -L $(get_compose_url) -o "$tmpfile"

    if [ -n "$mode" ]; then
	chmod $mode "$tmpfile"
    fi

    /bin/mv -f "$tmpfile" "$1"
}

install_docker_compose() {
    if [ "$(id -u)" -eq 0 ]; then
	prefix=/usr/local
    else
	prefix=$HOME/.local
    fi

    current_string=$(get_compose_version || true)
    current_number=$(get_version_number "$current_string")

    if [ "$current_number" = "$COMPOSE_VERSION" ]; then
	exit 0
    fi

    prior_string=$current_string
    target_file=$(get_target_file)
    install_binary_file "$target_file"
    current_string=$(get_compose_version "$target_file")

    if [ -z "$prior_string" ]; then
	printf '%s\n' ''
	printf 'Installed %s\n' "$current_string"
    elif [ "$current_string" != "$prior_string" ]; then
	printf '%s\n' ''
	printf 'Upgraded from %s\n' "$prior_string"
	printf 'Upgraded to %s\n' "$current_string"
    fi
}

install_docker_compose
