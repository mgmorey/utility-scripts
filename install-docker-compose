VERSION=1.28.2

BASE_URL=https://github.com/docker/compose/releases
TARGET=/usr/local/bin/docker-compose

source="docker-compose-$(uname -s)-$(uname -m)"
url="$BASE_URL/download/$VERSION/$source"

curl -L "$url" -o $TARGET
chmod a+x $TARGET
