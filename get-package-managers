abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort '%s: Assertion failed: %s\n' "$0" "$*"
}

get_package_managers() {
    for id in $ID $ID_LIKE; do
	case "$id" in
	    (amzn)
		case "$VERSION_ID" in
		    (2)
			managers="/usr/bin/yum"
			;;
		    (*)
			break
			;;
		esac
		;;
	    (centos)
		case "$VERSION_ID" in
		    (7)
			managers="/usr/bin/yum"
			;;
		    (8)
			managers="/usr/bin/dnf"
			;;
		    (*)
			break
			;;
		esac
		;;
	    (debian)
		managers="/usr/bin/apt-get"
		;;
	    (fedora)
		managers="/usr/bin/dnf"
		;;
	    (opensuse)
		managers="/usr/bin/zypper"
		;;
	    (rhel|ol)
		case "$VERSION_ID" in
		    (7.*)
			managers="/usr/bin/yum"
			;;
		    (8.*)
			managers="/usr/bin/dnf"
			;;
		    (*)
			break
			;;
		esac
		;;
	    (freebsd)
		managers="/usr/local/sbin/pkg"
		;;
	    (illumos)
		managers="/usr/bin/pkg /opt/local/bin/pkgin"
		;;
	    (macos)
		managers="/usr/local/bin/brew"
		;;
	    (netbsd)
		managers="/usr/pkg/bin/pkgin"
		;;
	    (solaris)
		managers="/usr/bin/pkg /opt/csw/bin/pkgutil"
		;;
	    (windows)
		case "$kernel_name" in
		    (MINGW64_NT)
			managers="/usr/bin/pacman"
			;;
		esac
		;;
	esac

	if [ -n "${managers-}" ]; then
	    break
	fi
    done

    if [ -n "${managers-}" ]; then
	printf '%s\n' $managers
    fi
}

case "$0" in
    (*/*)
	script_dir=$(cd "$(dirname "$0")" && pwd)
	;;
    (*)
	script_dir=
	;;
esac

script_prefix=${script_dir:+$script_dir/}

eval $("${script_prefix}get-os-release" -x)
get_package_managers
