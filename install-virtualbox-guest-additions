abort() {
    printf "$@" >&2
    exit 1
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

install_vbox_guest_deps() {
    validate_platform

    case "$kernel_name" in
	(Linux|GNU)
	    case "$ID" in
		(debian|raspbian|ubuntu|neon|linuxmint|kali)
		    apt-get install build-essential dkms linux-headers-$(uname -r)
		    ;;
		(centos)
		    "$script_dir/install-epel"

		    case "$VERSION_ID" in
			(7)
			    yum update kernel*
			    printf "Please reboot the machine with the new kernel (if updated).\n"
			    yum install make gcc perl dkms bzip2 kernel-headers kernel-devel
			    export KERN_DIR=/usr/src/kernels/`uname -r`
			    ;;
		    esac

		    if mount -r /dev/cdrom /media; then
			cd /media
			sh VBoxLinuxAdditions.run
		    fi
		    ;;
	    esac
	    ;;
    esac
}

validate_platform() {
    case "$kernel_name" in
	(Linux|GNU)
	    case "$ID" in
		(debian|raspbian|ubuntu|neon|linuxmint|kali)
		    :
		    ;;
		(centos)
		    case "$VERSION_ID" in
			(7)
			    :
			    ;;
			(*)
			    abort_not_supported Release
			    ;;
		    esac
		    ;;
		(*)
		    abort_not_supported Distro
		    ;;
	    esac
	    ;;
	(*)
	    abort_not_supported "Operating system"
	    ;;
    esac
}

if [ $# -gt 0 ]; then
    abort "%s: Too many arguments\n" "$0"
fi

script_dir=$(get_realpath "$(dirname "$0")")

eval $("$script_dir/get-os-release" -X)

install_vbox_guest_deps
