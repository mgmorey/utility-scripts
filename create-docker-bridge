create_docker_bridge() {
    docker network create $(get_options) $network
}

get_gw() {
    subnet=$(get_net $1)
    octet=$(get_octets $subnet 4)
    printf '%s.%s\n' $(get_octets $subnet 1,2,3) $((octet + 1))
}

get_net() {
    printf '%s\n' $1 | cut -d/ -f 1
}

get_octets() {
    printf '%s\n' $1 | cut -d. -f ${2:-1,2,3,4}
}

get_options() {
    if [ "$dhcp" = true ]; then
	ipam_driver=dhcp
	ipam_opt=dhcp_interface=${interface:-eth0}
    else
	ipam_driver=
	ipam_opt=
    fi

    printf '%s\n' --driver=$driver \
	   ${ipam_driver:+--ipam-driver=$ipam_driver} \
	   ${ipam_opt:+--ipam-opt=$ipam_opt} \
	   --opt=parent=${interface:-eth0}

    if [ -n "${net-}" ]; then
	printf '%s\n' --subnet=$subnet

	if [ "$first" = true ]; then
	    printf '%s\n' --gateway=$(get_gw $subnet)
	elif [ -n "${gateway-}" ]; then
	    printf '%s\n' --gateway=$gateway
	fi
    fi
}

parse_arguments() {
    dhcp=false
    first=false
    gateway=
    interface=
    subnet=

    while getopts dfg:i:mn:h opt; do
	case $opt in
	    (d)
		dhcp=true
		;;
	    (f)
		first=true
		;;
	    (g)
		gateway=$OPTARG
		;;
	    (i)
		interface=$OPTARG
		;;
	    (n)
		subnet=$OPTARG
		;;
	    (h)
		usage
		exit 0
		;;
	    (\?)
		printf "%s\n" "" >&2
		usage
		exit 2
		;;
	esac
    done

    shift $(($OPTIND - 1))
    network=$1

    case "$network" in
	(bridge[0-9])
	    driver=bridge
	    ;;
	(ipvlan[0-9])
	    driver=ipvlan
	    ;;
	(macvlan[0-9])
	    driver=macvlan
	    ;;
	(*)
	    printf "%s: %s: Invalid network name\n" "$0" "$network" >&2
	    usage
	    exit 2
	    ;;
    esac
}

usage() {
    if [ $# -gt 0 ]; then
	printf "$@" >&2
	printf "%s\n" "" >&2
    fi

    cat <<-EOF >&2
	Usage: $0 [-d] [-f] [-g GATEWAY] [-n SUBNET] bridgeN
	       $0 [-d] [-f] [-g GATEWAY] [-n SUBNET] ipvlanN
	       $0 [-d] [-f] [-g GATEWAY] [-n SUBNET] macvlanN
	       $0 -h
	EOF
}

if [ $# -lt 1 ]; then
    abort "%s: Not enough arguments\n" "$0"
fi

parse_arguments "$@"
create_docker_bridge
