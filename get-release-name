case "$(get-platform-name)" in
    (Linux)
	if lsb_release -rs 2>/dev/null; then
	    :
	elif [ -e /etc/fedora-release ]; then
	    (set -- $(cat /etc/fedora-release); echo $1)
	else
	    echo unknown
	fi
	;;
    (*)
	echo unknown
	;;
esac
