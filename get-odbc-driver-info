import configparser
import json
import os
import re

DRIVER_MSSQL = re.compile(r'libmsodbcsql-\d+\.\d+\.so\.\d+\.\d+')
DRIVER_MYSQL = re.compile(r'libmyodbc\d+[aw]\.so')
DRIVER_ORACLE = re.compile(r'libsqora\.so\.\d+\.\d+')
DRIVER_POSTGRES = re.compile(r'psqlodbc[aw]\.so')

ODBC_DIALECTS = {
    DRIVER_MSSQL: 'mssql',
    DRIVER_MYSQL: 'mysql',
    DRIVER_ORACLE: 'oracle',
    DRIVER_POSTGRES: 'postgres',
}

ODBC_DRIVERS = '/etc/odbcinst.ini'


def enumerate_drivers() -> dict:
    inifile = configparser.ConfigParser()
    inifile.read(ODBC_DRIVERS)
    drivers = {}

    for section in inifile.sections():
        driver = inifile[section]
        driver_data = {key: driver[key] for key in driver}
        sql_dialect = get_dialect(driver)
        drivers[section] = {
            'dialect': sql_dialect,
            'parameters': driver_data,
        }

    return drivers


def get_dialect(driver: dict) -> str:
    dialect = 'unknown'
    library = os.path.basename(driver['driver'])

    for pattern in ODBC_DIALECTS:
        if pattern.fullmatch(library):
            dialect = ODBC_DIALECTS[pattern]

    return dialect


def main():
    drivers = enumerate_drivers()
    print(json.dumps(drivers, indent=4, sort_keys=True))


if __name__ == '__main__':
    main()
