abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

configure_platform() {
    case "$(uname -s)" in
	(CYGWIN_NT-10.0|MINGW64_NT-10.0-*)
	    install_exec="/bin/install -m u=rwx,go=rx"
	    install_noexec="/bin/install -m u=rw,go=r"
	    ;;
	(*)
	    install_exec="ln -sf"
	    install_noexec="ln -sf"
	    ;;
    esac
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

get_libraries() (
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    find "$1" \
	 -maxdepth 1 \
	 -type f \
	 -name '*.sh'
)

get_scripts() (
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    find "$1" \
	 -maxdepth 1 \
	 -type f \
	 ! -name '*~' \
	 ! -name '.*' \
	 ! -name LICENSE \
	 ! -name README \
	 ! -name "$(basename "$0")"
)

install_scripts() {
    configure_platform

    if [ "$(basename "$source_dir")" != utility-scripts ]; then
	abort "%s: Please change to the source directory and try again\n" "$0"
    fi

    if [ ! -e "$target_dir" ]; then
	mkdir -p "$target_dir"
    fi

    scripts="$(get_scripts "$source_dir")"
    libraries="$(get_libraries "$source_dir")"

    if [ -n "$scripts" ]; then
	$install_exec $scripts "$target_dir"
    fi

    if [ -n "$libraries" ]; then
	$install_noexec $libraries "$target_dir"
    fi

    cd "$target_dir"

    for file in *; do
	if [ -h $file -a ! -e $file ]; then
	    printf "Removing broken link: %s\n" "$file"
	    /bin/rm -f "$file"
	fi
    done
}

parse_arguments() {
    source_dir="$(get_realpath "$1")"

    if [ $# -gt 1 ]; then
	target_dir="$2"
    else
	target_dir="$HOME/bin"
    fi
}

parse_arguments "$(pwd)" "$@"
install_scripts
