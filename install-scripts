abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

configure_platform() {
    case "$(uname -s)" in
	(CYGWIN_NT-10.0|MINGW64_NT-10.0-*)
	    default_mode=copy
	    ;;
	(*)
	    default_mode=link
	    ;;
    esac

    case "${mode:-$default_mode}" in
	(copy)
	    install_exec="/bin/install -m u=rwx,go=rx"
	    install_noexec="/bin/install -m u=rw,go=r"
	    ;;
	(link)
	    install_exec="ln -sf"
	    install_noexec="ln -sf"
	    ;;
    esac
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

get_broken_links() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    find "$1" \
	 -maxdepth 1 \
	 -type l \
	 ! -exec test -e {} \; \
	 -print
}

get_library_files() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    find "$1" \
	 -maxdepth 1 \
	 -name '*.sh' \
	 -type f
}

get_script_files() {
    assert [ $# -eq 1 ]
    assert [ -n "$1" ]
    find "$1" \
	 -maxdepth 1 \
	 ! -name LICENSE \
	 ! -name README \
	 ! -name "$(basename "$0")" \
	 ! -name '*.*' \
	 ! -name '*~' \
	 -type f
}

install_library_files() {
    library_files="$(get_library_files "$source_dir")"

    if [ -n "$library_files" ]; then
	$install_noexec $library_files "$target_dir"
    fi
}

install_script_files() {
    script_files="$(get_script_files "$source_dir")"

    if [ -n "$script_files" ]; then
	$install_exec $script_files "$target_dir"
    fi
}

install_scripts() {
    configure_platform
    source_dir="$(get_realpath "$(pwd)")"

    case "$(basename "$source_dir")" in
	(scripts|*-scripts)
	    true
	    ;;
	(*)
	    abort "%s: Please change to the source directory and try again\n" "$0"
	    ;;
    esac

    if [ ! -e "$target_dir" ]; then
	mkdir -p "$target_dir"
    fi

    install_library_files
    install_script_files
    remove_broken_links
}

parse_arguments() {
    mode=

    while getopts clh opt; do
	case $opt in
	    (c)
		mode=copy
		;;
	    (l)
		mode=link
		;;
	    (h)
		usage
		exit 0
		;;
	    (\?)
		printf "%s\n" "" >&2
		usage
		exit 2
		;;
	esac
    done

    shift $(($OPTIND - 1))

    if [ $# -gt 0 ]; then
	target_dir="$1"
    else
	target_dir="$HOME/bin"
    fi
}

remove_broken_links() {
    cd "$target_dir"
    broken_links="$(get_broken_links .)"

    if [ -n "$broken_links" ]; then
	printf "Removing broken link: %s\n" $broken_links
	/bin/rm -f $broken_links
    fi
}

usage() {
    if [ $# -gt 0 ]; then
	printf "$@" >&2
	printf "%s\n" "" >&2
    fi

    cat <<-EOF >&2
	Usage: $0 [-c | -l] [TARGET]
	       $0 -h
	EOF
}

parse_arguments "$@"
install_scripts
