abort() {
    printf "$@" >&2
    exit 1
}

if [ -h $0 ]; then
    abort "Please change to source directory before running this script\n"
fi

dir=$PWD

cd "$HOME"
mkdir -p Documents/bin

for file in $dir/*; do
    if [ ! -e Documents/bin/$(basename $file) -a -x $file ]; then
	ln -s $file Documents/bin
    fi
done

if [ ! -e bin ]; then
    ln -s Documents/bin bin
fi
