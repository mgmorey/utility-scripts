abort() {
    printf "$@" >&2
    exit 1
}

if [ -h $0 ]; then
    abort "Please change to source directory before running this script\n"
fi

dir=$PWD
cd "$HOME"

if [ ! -d Documents/bin ]; then
    mkdir -p Documents

    if [ -d bin ]; then
	/bin/mv bin Documents/bin
    else
	mkdir Documents/bin
    fi
fi

if [ ! -e bin ]; then
    /bin/ln -s Documents/bin bin
fi

for file in bin/*; do
    if [ -h $file -a ! -e $file ]; then
	printf "Removing broken link: %s\n" "$file"
	/bin/rm -f $file
    fi
done

for file in $dir/*; do
    if [ ! -e bin/$(basename $file) -a -x $file ]; then
	ln -s $file bin
    fi
done

