# along with this program.  If not, see <https://www.gnu.org/licenses/>.

DEBIAN_PKGS="build-essential libglib2.0-dev libsecret-1-dev pkgconf"

RE='/git-credential-(gnome-keyring|libsecret|netrc|osxkeychain|wincred)(\.c|)$'

abort() {
    printf "$@" >&2
    exit 1
}

abort_extra_arguments() {
    usage "%s: extra arguments -- %s\n" "$0" "$*"
    exit 2
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_helper() {
    $sh -c "git config --global --get credential.helper"
}

set_helper() {
    if [ -n "$1" ]; then
	case "$kernel_name" in
	    (Linux)
		case "$ID" in
		    (debian|ubuntu)
			packages=$DEBIAN_PKGS
			;;
		esac
		;;
	    (*)
		packages=
		;;
	esac

	if [ -n "$packages" ]; then
	    sh -eu $script_dir/install-packages $packages
	fi
	if [ "$1" != cache -a ! -x "$1" -a -r "$1.c" ]; then
	    cd $(dirname "$1") && make $(basename "$1")
	fi
	if [ "$1" = cache -o -x "$1" ]; then
	    $sh -c "git config --global credential.helper $1"
	else
	    abort "%s: No such executable file\n" "$1"
	fi
    else
	abort "No executable file\n"
    fi
}

parse_arguments() {
    is_query=false

    while getopts hq opt; do
	case $opt in
	    (h)
		usage
		exit 0
		;;
	    (q)
		is_query=true
		;;
	    (\?)
		printf "%s\n" "" >&2
		usage
		exit 2
		;;
	esac
    done

    shift $(($OPTIND - 1))

    if [ $# -gt 1 ]; then
	abort_extra_arguments "$@"
    elif [ $# -gt 0 ]; then
	credential_helper=$1
    fi
}

query_helpers() {
    case "$kernel_name" in
	(Linux)
	    case "$ID" in
		(debian|fedora|ubuntu)
		    package=git
		    ;;
		(opensuse-*)
		    package=git-credential-libsecret
		    ;;
		(*)
		    abort_not_supported Distro
		    ;;
	    esac
	    ;;
	(CYGWIN_NT-*)
	    package=git
	    ;;
	(*)
	    abort_not_supported "Operating system"
	    ;;
    esac

    printf "# %s package %s:\n" "$PRETTY_NAME" $package

    case "$kernel_name" in
	(Linux)
	    get-package-filenames $package | egrep "$RE" | sed -e 's/.c$//g'
	    ;;
	(CYGWIN_NT-*)
	    printf "%s\n" /usr/libexec/git-core/git-credential-manager
	    ;;
    esac
}

realpath() {
    assert [ -d "$1" ]

    if [ -x /usr/bin/realpath ]; then
	/usr/bin/realpath "$1"
    else
	if expr "$1" : '/.*' >/dev/null; then
	    printf "%s\n" "$1"
	else
	    printf "%s\n" "$PWD/${1#./}"
	fi
    fi
}

usage() {
    if [ $# -gt 0 ]; then
	printf "$@" >&2
	printf "%s\n" "" >&2
    fi

    cat >&2 <<-EOM
	Usage: $0
	       $0 CREDENTIAL_HELPER
	       $0 -h
	       $0 -q
	EOM
}

script_dir=$(realpath "$(dirname "$0")")

eval $(sh -eu $script_dir/get-os-release -X)

if [ "$(id -u)" -eq 0 ]; then
    sh="su $SUDO_USER"
else
    sh="sh"
fi

parse_arguments "$@"

if [ $is_query = true ]; then
    query_helpers
elif [ -n "${credential_helper-}" ]; then
    set_helper "$credential_helper"
else
    get_helper
fi
