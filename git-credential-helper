# GNU General Public License for more details.

# You should have received a copy of the GNU General Public License
# along with this program.  If not, see <https://www.gnu.org/licenses/>.

CENTOS_7_PKGS="libsecret-devel"
CENTOS_8_PKGS="libsecret-devel"

DEBIAN_PKGS="build-essential libglib2.0-dev libsecret-1-dev pkgconf"

GREP_RE='/git-credential-(gnome-keyring|libsecret|netrc|osxkeychain|wincred)(\.c|)$'

abort() {
    printf "$@" >&2
    exit 1
}

abort_too_many_arguments() {
    usage "%s: Too many arguments -- %s\n" "$0" "$*"
    exit 2
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_helper_binary() {
    egrep "$GREP_RE" | sed -e 's/.c$//g'
}

configure_platform() {
    packages=

    for id in $ID $ID_LIKE; do
	case "$id" in
	    (amzn)
		package=git

		case "$VERSION_ID" in
		    (2)
			packages=$CENTOS_7_PKGS
			;;
                    (*)
                        break
                        ;;
		esac
		;;
	    (cygwin)
		package=git
		;;
	    (centos)
		package=git

		case "$VERSION_ID" in
		    (7)
			packages=$CENTOS_7_PKGS
			;;
		    (8)
			packages=$CENTOS_8_PKGS
			;;
                    (*)
                        break
                        ;;
		esac
		;;
	    (debian)
		package=git
		packages=$DEBIAN_PKGS
		;;
	    (fedora)
		package=git
		;;
	    (opensuse)
		package=git-credential-libsecret
		;;
	    (rhel|ol)
		package=git
		;;
	esac

	if [ -n "${package-}" ]; then
	    break
	elif [ -n "${packages-}" ]; then
	    break
	fi
    done
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
    	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

git_credential_helper() {
    validate_platform
    configure_platform

    if [ $is_query = true ]; then
	query_available_helpers
    elif [ -n "${credential_helper-}" ]; then
	set_helper "$credential_helper"
    else
	query_configured_helper
    fi
}

set_helper() {
    if [ -n "$1" ]; then
	if [ -n "${packages-}" ]; then
	    install-packages $packages
	fi

	if [ "$1" != cache -a ! -x "$1" -a -r "$1.c" ]; then
	    cd $(dirname "$1") && make $(basename "$1")
	fi

	if [ "$1" = cache -o -x "$1" ]; then
	    run_unpriv /bin/sh -c "git config --global credential.helper $1"
	else
	    abort "%s: No such executable file\n" "$1"
	fi
    else
	abort "No executable file\n"
    fi
}

parse_arguments() {
    is_query=false

    while getopts hq opt; do
	case $opt in
	    (h)
		usage
		exit 0
		;;
	    (q)
		is_query=true
		;;
	    (\?)
		printf "%s\n" "" >&2
		usage
		exit 2
		;;
	esac
    done

    shift $(($OPTIND - 1))

    if [ $# -gt 1 ]; then
	abort_too_many_arguments "$@"
    elif [ $# -gt 0 ]; then
	credential_helper=$1
    fi
}

query_available_helpers() {
    printf "# %s package %s:\n" "$PRETTY_NAME" $package

    case "$kernel_name" in
	(Linux|GNU)
	    get-package-filenames $package | get_helper_binary
	    ;;
	(CYGWIN_NT-*)
	    printf "%s\n" /usr/libexec/git-core/git-credential-manager
	    ;;
    esac
}

query_configured_helper() {
    run_unpriv /bin/sh -c "git config --global --get credential.helper"
}

usage() {
    if [ $# -gt 0 ]; then
	printf "$@" >&2
	printf "%s\n" "" >&2
    fi

    cat <<-EOF >&2
	Usage: $0
	       $0 CREDENTIAL_HELPER
	       $0 -h
	       $0 -q
	EOF
}

validate_platform() {
    case "$kernel_name" in
	(CYGWIN_NT-*)
	    true
	    ;;
	(Linux|GNU)
	    case "$ID" in
		(debian|raspbian|fedora|ubuntu|linuxmint|neon|kali)
		    true
		    ;;
		(opensuse-*)
		    true
		    ;;
		(amzn|fedora|rhel|ol|centos)
		    true
		    ;;
		(*)
		    abort_not_supported Distro
		    ;;
	    esac
	    ;;
	(FreeBSD)
	    true
	    ;;
	(*)
	    abort_not_supported "Operating system"
	    ;;
    esac
}

script_dir=$(get_realpath "$(dirname "$0")")

. "$script_dir/common-functions.sh"

set_user_profile "$script_dir"
eval $(get-os-release -x)
parse_arguments "$@"
git_credential_helper
