BASE_URL=https://www.python.org/ftp
VERSION=3.6.7

abort() {
    printf "$@" >&2
    exit 1
}

basename=Python-$VERSION

archive_dir="$HOME/Downloads/Python"
build_dir="$HOME/Documents/build/$basename"
src_dir="$HOME/Documents/src/Python/$basename"

filename=$basename.tar.xz

pathname=$archive_dir/$filename
url=$BASE_URL/python/$VERSION/$filename

kernel_name=$(get-os-kernel-name)

case "$kernel_name" in
    (Linux|FreeBSD|SunOS|NT)
	mkdir -p "$build_dir" "$(dirname "$src_dir")" "$archive_dir"

	if [ ! -r "$pathname" ]; then
	    cd "$archive_dir"
	    wget $url
	fi

	if [ ! -r "$src_dir/configure" ]; then
	    cd $(dirname "$src_dir")
	    tar -xvf "$pathname"
	fi

	if [ ! -r "$build_dir/config.status" ]; then
	    cd "$build_dir"
	    "$src_dir/configure" "$@"
	fi
	;;
    (*)
	abort "%s: Operating system not supported\n" "$kernel_name"
	;;
esac
