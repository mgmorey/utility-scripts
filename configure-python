BASE_URL=https://www.python.org/ftp
VERSION=3.6.8

abort() {
    printf "$@" >&2
    exit 1
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

realpath() {
    assert [ -d "$1" ]

    if [ -x /usr/bin/realpath ]; then
	/usr/bin/realpath "$1"
    else
	if expr "$1" : '/.*' >/dev/null; then
	    printf "%s\n" "$1"
	else
	    printf "%s\n" "$PWD/${1#./}"
	fi
    fi
}

basename=Python-$VERSION

archive_dir="$HOME/Downloads/Python"
build_dir="$HOME/Documents/build/$basename"
src_dir="$HOME/Documents/src/Python/$basename"

filename=$basename.tar.xz

pathname=$archive_dir/$filename
url=$BASE_URL/python/$VERSION/$filename

script_dir=$(realpath "$(dirname "$0")")

distro_name=$(sh -eu $script_dir/get-os-release -i)
kernel_name=$(sh -eu $script_dir/get-os-release -k)

case "$kernel_name" in
    (Linux)
	case "$distro_name" in
	    (debian|fedora|opensuse-*|redhat|centos)
	    	;;
	    (*)
		abort "%s: Distro not supported\n" "$distro_name"
		;;
	esac
	;;
    (FreeBSD|SunOS|NT)
    	;;
    (*)
	abort "%s: Operating system not supported\n" "$kernel_name"
	;;
esac

install-python3-build-deps
install-python3-build-extras

mkdir -p "$build_dir" "$(dirname "$src_dir")" "$archive_dir"

if [ ! -r "$pathname" ]; then
    cd "$archive_dir"
    wget $url
fi

if [ ! -r "$src_dir/configure" ]; then
    cd $(dirname "$src_dir")
    tar -xvf "$pathname"
fi

if [ ! -r "$build_dir/config.status" ]; then
    cd "$build_dir"
    "$src_dir/configure" "$@"
fi
