BASE_URL=https://www.python.org/ftp
PYTHON_PREFIX=/usr/local
: ${PYTHON_VERSION:=3.6.9}

abort() {
    printf "$@" >&2
    exit 1
}

abort_not_supported() {
    abort "%s: %s: %s not supported\n" "$0" "$PRETTY_NAME" "$*"
}

assert() {
    "$@" || abort "%s: Assertion failed: %s\n" "$0" "$*"
}

get_realpath() (
    assert [ $# -ge 1 ]
    realpath=$(which realpath)

    if [ -n "$realpath" ]; then
    	$realpath "$@"
    else
	for file; do
	    if expr "$file" : '/.*' >/dev/null; then
		printf "%s\n" "$file"
	    else
		printf "%s\n" "$PWD/${file#./}"
	    fi
	done
    fi
)

basename=Python-$PYTHON_VERSION

archive_dir="$HOME/Downloads/Python"
build_dir="$HOME/Documents/build/$basename"
src_dir="$HOME/Documents/src/Python/$basename"

filename=$basename.tar.xz

pathname=$archive_dir/$filename
url=$BASE_URL/python/$PYTHON_VERSION/$filename

script_dir=$(get_realpath "$(dirname "$0")")

eval $("$script_dir/get-os-release" -X)

case "$kernel_name" in
    (Linux)
	case "$ID" in
	    (debian|ubuntu|opensuse-*|fedora|redhat|centos)
		:
	    	;;
	    (*)
		abort_not_supported Distro
		;;
	esac
	;;
    (FreeBSD|SunOS|CYGWIN_NT-*)
	:
    	;;
    (*)
	abort_not_supported "Operating system"
	;;
esac

mkdir -p "$build_dir" "$(dirname "$src_dir")" "$archive_dir"

if [ ! -r "$pathname" ]; then
    cd "$archive_dir"
    wget $url
fi

if [ ! -r "$src_dir/configure" ]; then
    cd $(dirname "$src_dir")
    tar -xvf "$pathname"
fi

configure=$src_dir/configure
options="--enable-optimizations --enable-shared --prefix=$PYTHON_PREFIX"

if [ -r "$build_dir/config.status" ]; then
    exit 0
fi

cd "$build_dir"

case "$kernel_name" in
    (Linux)
	"$configure" $options "$@" LDFLAGS="-Wl,--rpath=$PYTHON_PREFIX/lib"
	;;
    (FreeBSD)
	"$configure" $options "$@" LDFLAGS="-R$PYTHON_PREFIX/lib"
	;;
    (SunOS)
	"$configure" $options "$@" LDFLAGS="-R$PYTHON_PREFIX/lib"
	;;
    (*)
	"$configure"
	;;
esac
