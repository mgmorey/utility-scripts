DEBIAN_PKGS="libbz2-dev libgdbm-dev libncurses5-dev libreadline-dev \
libsqlite3-dev libssl-dev tk8.6-dev"

FEDORA_PKGS="bzip2-devel gdbm-devel mcpanel-devel ncurses-devel \
readline-devel sqlite-devel tk-devel"

OPENSUSE_PKGS="gdbm-devel libbz2-devel libressl-devel ncurses-devel \
readline-devel sqlite3-devel tk-devel"

abort() {
    printf "$@" >&2
    exit 1
}

distro_name=$(get-os-distro-name)
kernel_name=$(get-os-kernel-name)

case "$kernel_name" in
    (Linux)
	case "$distro_name" in
	    (debian)
	    	packages=$DEBIAN_PKGS
	    	;;
	    (fedora)
	    	packages=$FEDORA_PKGS
	    	;;
	    (opensuse-*)
	    	packages=$OPENSUSE_PKGS
	    	;;
	    (*)
		abort "%s: Distro not supported\n" "$distro_name"
		;;
	esac
	;;
    (*)
	abort "%s: Operating system not supported\n" "$kernel_name"
	;;
esac

install-packages "$@" $packages
