# You should have received a copy of the GNU General Public License
# along with this program.  If not, see <https://www.gnu.org/licenses/>.

FILE=/etc/release
OS_FILE=/etc/os-release

usage() {
    printf "Usage: %s: [-h|-i|-k|-p|-r]\n" $(basename "$0")
}

system_name="$(uname -s)"

case "$system_name" in
    (Linux)
	. $OS_FILE
	kernel_name=$system_name
	;;
    (Darwin|FreeBSD|GNU|Minix)
	ID=
	PRETTY_NAME=$(uname -sr)
	VERSION_ID=$(uname -r)
	kernel_name=$system_name
	;;
    (SunOS)
	ID=$(awk 'NR == 1 {print $1}' $FILE | tr '[:upper:]' '[:lower:]')
	PRETTY_NAME=$(awk 'NR == 1 {printf("%s %s %s\n", $1, $2, $3)}' $FILE)
	VERSION_ID=$(awk 'NR == 1 {print $3}' $FILE)
	kernel_name=$system_name
	;;
    (CYGWIN_NT-*)
	ID=
	PRETTY_NAME=$system_name
	VERSION_ID=${system_name#*-}
	cygwin_name=${system_name%-*}
	kernel_name=${cygwin_name#*_}
	;;
esac

if [ $# -eq 0 -a -n "${ID:-}" ]; then
    printf "%s\n" "$ID"
    exit 0
fi

while getopts hikprv opt
do
     case $opt in
	 (h)
	     usage
	     ;;
	 (i)
	     if [ -n "${ID:-}" ]; then
		 printf "%s\n" "$ID"
	     fi
	     ;;
	 (k)
	     if [ -n "${kernel_name:-}" ]; then
		 printf "%s\n" "$kernel_name"
	     fi
	     ;;
	 (p)
	     if [ -n "${PRETTY_NAME:-}" ]; then
		 printf "%s\n" "$PRETTY_NAME"
	     fi
	     ;;
	 (r|v)
	     if [ -n "${VERSION_ID:-}" ]; then
		 printf "%s\n" "$VERSION_ID"
	     fi
	     ;;
	 (?)
	     usage
	     exit 2
	     ;;
     esac
done
